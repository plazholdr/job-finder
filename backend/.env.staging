# Staging Environment Configuration
NODE_ENV=staging
PORT=4030
HOST=0.0.0.0
FRONTEND_URL=http://staging.saino365.com

# Database
MONGODB_URI=mongodb://localhost:27017/job-finder-staging
REDIS_URI=redis://localhost:6379

# Authentication
JWT_SECRET=staging-secret-key-change-this
JWT_EXPIRES_IN=1d

# Email
EMAIL_FROM=noreply@jobfinder.com
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=your-smtp-user
EMAIL_PASS=your-smtp-password

# Storage (using MinIO for staging)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=job-finder-staging

# CORS
CORS_ORIGIN=http://staging.saino365.com

# Logging
LOG_LEVEL=info
